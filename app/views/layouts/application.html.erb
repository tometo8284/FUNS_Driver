<!DOCTYPE html>
<html>
  <head>
    <title>FUNsDriver</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if user_signed_in? %>
      <li>
        <%= link_to "マイページ", user_path(current_user.id) %>
      </li>
      <li>
        <%= link_to "自身の投稿を見る", user_post_path(current_user.id) %>
      </li>
      <li>
        <%= link_to "投稿する", new_post_path %> 
      </li>
      <li>
        <%= link_to "投稿一覧", root_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% elsif admin_signed_in? %>
      <li>
        <%= link_to "会員一覧", admin_users_path %>
      </li>
      <li>
        <%= link_to "カテゴリ一覧", admin_categories_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
      <li>
        <%= link_to "トップページ", root_path %>
      </li>
    <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <% if user_signed_in? || admin_signed_in? %>
      <% else %>
        <%= link_to "管理者ログイン", admin_session_path %>
        <%= link_to "ゲストログイン", public_guest_sign_in_path, method: :post %>
      <% end %>
    </footer>
  </body>
</html>
