<h1><%= @post.title %></h1>
<% if @user == current_user %>
  <%= @post.is_deleted?? '非公開' : '公開' %>
<% end %>
  <table>
    <tr>
      <th>投稿者</th>
      <td>
        <%= link_to user_path(@user.id) do %>
          <%= @post.user.nick_name %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>ドライブメモ</th>
      <td><%= @post.describe %></td>
    </tr>
    <tr>
      <th>カテゴリ</th>
      <td><%= @post.category.name %></td>
    </tr>
    <tr>
      <th>エリア</th>
      <td><%= @post.area_i18n %></td>
　　　<td><%= @post.prefecture_i18n %></td>
　　　<td><%= @post.location %></td>
    </tr>
    <tr>
      <th>乗り物区分</th>
      <td><%= @post.vehicle_i18n %></td>
    </tr>
  </table>
