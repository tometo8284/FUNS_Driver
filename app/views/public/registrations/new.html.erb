<div class="container text-center col-lg-7 mt-2">
  <h2>新規登録画面</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  
    <div class="row mt-3">
      <div class="col-4"><%= f.label :emaill %></div>
      <div class="field_with_errors col-7"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %></div>
    </div>
    
    <div class="row mt-3">
      <div class="col-4"><%= f.label :name %></div>
      <div class="field_with_errors col-7"><%= f.text_field :name, class: "col-12" %></div>
    </div>
    
    <div class="row mt-3">
      <div class="col-4"><%= f.label :nick_name %></div>
      <div class="field_with_errors col-7"><%= f.text_field :nick_name, class: "col-12" %></div>
    </div>
    
    <div class="row mt-3">
      <div class="col-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="field_with_errors col-7"><%= f.password_field :password, autocomplete: "new-password", class: "col-12" %></div>
    </div>
  
    <div class="field row mt-2">
      <%= f.label :password_confirmation, class: "col-4" %>
      <div class="col-7"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-12" %></div>
    </div>
  
    <div class="actions mt-3 mb-3">
      <button type="submit" class="btn btn-success w-50">Sign up</button>
    </div>
  <% end %>

  <%= render "public/shared/links", class: "text-light link-dark" %>
</div>