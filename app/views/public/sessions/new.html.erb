<div class="container mt-3 text-center">
  <h2>ログイン画面</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row mt-3">
      <%= f.label :email, class: "col-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-7" %>
    </div>
  
    <div class="field row mt-3">
      <%= f.label :password, class: "col-4" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "col-7" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions mt-3 mb-3">
      <button type="submit" class="btn btn-primary w-50">Log in</button>
    </div>
  <% end %>
  
  <%= render "public/shared/links" %>

</div>
