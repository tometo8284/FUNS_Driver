<h1>
  <%= @user.nick_name %>
  
  <% if @user == current_user %>
    さんのマイページ
  <% else %>
    さんの紹介ページ<br />
    <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
    <% end %>
  <% end %>
</h1>
<%= link_to "投稿一覧を見る", user_post_path(@user) %>
<%= link_to "いいね一覧を見る", user_fav_path(@user) %>
<%= link_to "フォロー一覧", user_followings_path(@user) %>
<%= link_to "フォロワー一覧", user_followers_path(@user) %>
<br />
<%= image_tag @user.get_profile_image, size: "200x200" %>
<li>
  自己紹介:
  <%= @user.introduction %>
</li>
<li>
  所在地:
  <%= @user.address %>
</li>
<li>
  年齢:
  <%= @user.age %>
</li>
<li>
  性別:
  <%= @user.gender_i18n %>
</li>

<% if @user == current_user %>
  <%= link_to "編集", edit_user_path(current_user.id) %>
<% end %>
