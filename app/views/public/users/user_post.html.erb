<h1><%= @user.nick_name %>さんのドライブデータ一覧</h1>
  <% @posts.each do |post| %>
    <% if @user == current_user %>
      <%= post.is_deleted?? '非公開' : '公開' %>
    <% end %>
    <% if post.is_deleted == false || @user == current_user %>
      <%= link_to post_path(post.id) do %>
        <%= post.title %>
      <% end %>
      <br />
      <%= image_tag post.get_image, size: "100x100" %>
      <table>
        <tr>
          <th>場所</th>
          <td><%= post.area_i18n %></td>
          <td><%= post.prefecture_i18n %></td>
          <td><%= post.location %></td>
        </tr>
        <tr>
          <th>カテゴリ</th>
          <td><%= post.category.name %></td>
        </tr>
        <tr>
          <th>♥</th>
          <td><%= post.favs.count %> いいね</td>
        </tr>
        <tr>
          <th>コメント件数</th>
          <td><%= post.comments.count %></td>
        </tr>
      </table>
    <% end %>
  <% end %>
  