<div class="container mt-2 mx-auto">
  <% if users.exists? %>
    <% users.each do |user| %>
      <table class="table text-center">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
            <th>投稿数</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(user.id) do %>
                <%= user.nick_name %>
              <% end %>
            </td>
            <td> <%= user.followings.count %></td>
            <td><%= user.followers.count %></td>
            <td><%= user.posts.count %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  <% else %>
    <p class="text-center">ユーザーはいません</p>
  <% end %>
</div>