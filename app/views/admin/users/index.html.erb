<h1>会員一覧</h1>
  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th colspan="1"></th>
        <th>氏名</th>
        <th>ニックネーム</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
        <td>
          <%= link_to admin_user_path(user.id) do %>
            <%= user.name %>
          <% end %>
        </td>
        <td><%= user.nick_name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_deleted?? '退会' : '有効' %></td>
        <td><%= link_to "投稿一覧", admin_user_post_path(user.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  