<h1>
  会員ID: <%= @user.id %><br />
  <%= @user.name %><span>さんの会員情報編集</span>
</h1>
<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
   <%= f.file_field :profile_image, accept: "image/*" %>
  <label>氏名</label>
    <%= f.text_field :name, autofocus: true %>
  <br />  
  <label>ニックネーム</label>
    <%= f.text_field :nick_name, autofocus: true %>
  <br />
  <label>メールアドレス</label>
    <%= f.text_field :email, autofocus: true %>
  <br />
  <label>自己紹介</label>
    <%= f.text_area :introduction, autofocus: true %>
  <br />
  <label>所在地</label>
    <%= f.text_field :address, autofocus: true %>
  <br />
  <label>年齢</label>
    <%= f.text_field :age, autofocus: true %>
  <br />
  <label>性別</label>
    <%= f.select :gender, User.genders.keys.map{|k| [t("enums.user.gender.#{k}"), k] } %>
  <br />
  <label>ステータス</label>
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :is_deleted, "有効" %> &nbsp;
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :is_deleted, "退会" %>
  <br />
  <%= f.submit "変更を保存" %>  
<% end %>