<div class="container text-center col-lg-6 mt-3">
  <h2>管理者ログイン画面</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row mt-5">
      <%= f.label :email, class: "col-4" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-7" %>
    </div>
    <div class="field row mt-5">
      <%= f.label :password, class: "col-4" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "col-7" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field mt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions mt-3">
      <%= f.submit "Log in", class: "btn btn-success w-50" %>
    </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>