<div class="container mt-5 col-lg-5 text-center">
  <p><%= notice %></p>
  <% if @category.errors.any? %>
    エラーが発生しました
    <ul>
      <% @category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @category, url: admin_categories_path, method: :post do |f| %>
  <div class="row">
  <label class="col-lg-3 p-1 h5">新規追加</label>
    <%= f.text_field :name, placeholder: "カテゴリ名を入力してください", class: "col-lg-6 mr-3" %>
    <%= f.submit "新規登録", class: "btn btn-success col-lg-2" %>
    </div>
  <% end %>
  <table class="table">
    <h2 class="mt-5">カテゴリ一覧</h2>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to "編集", edit_admin_category_path(category.id), class: "btn btn-secondary" %></td>
          <td><%= link_to "削除", admin_category_path(category.id), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>