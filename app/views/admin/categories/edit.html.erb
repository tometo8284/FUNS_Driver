<div class="container mt-3 col-lg-5 text-center">
  <% if @category.errors.any? %>
  　エラーが発生しました
  　<ul>
    　<% @category.errors.full_messages.each do |message| %>
      　<li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <h2>カテゴリ名編集</h2>
　<%= form_with model: @category, url: admin_category_path(@category.id), method: :patch do |f| %>
　   <label>カテゴリ名</label>
　   <%= f.text_field :name, autofocus: true %>
　   <%= f.submit "変更を保存", class: "btn btn-success" %>
　   <%= link_to "戻る", admin_categories_path, class: "btn btn-primary" %>
　<% end %>
</div>